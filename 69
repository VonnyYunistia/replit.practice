public static void main(String []  args){

int i,j,row=7;

    //print upper half

    for(i=row; i>=1; i--){
      for(j=1; j<=i; j++){
         System.out.print(j+" ");
      }
      System.out.println();
    }

    // for lower half

    for(i=2; i<=row; i++){
      for(j=1; j<=i; j++){
            System.out.print(j+" "); 
      }     
      System.out.println();
    } 



    
  }
